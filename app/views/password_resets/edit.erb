<% provide(:title, 'Reset password') %>

<div class="row justify-content-center">
  <div class="col-md-8">

    <div class="card">
      <div class="card-header">
        <h3 class="text-center">Reset password</h3>
      </div>
      <div class="card-body">

        <%= form_for(@user, url: password_reset_path(params[:token])) do |f| %>
          <%= render 'shared/error_messages', obj: @user %>

          <%= hidden_field_tag :email, @user.email %>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control js-event-form-field', data: {event_form_field_value: 'password reset - password'} %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control js-event-form-field', data: {event_form_field_value: 'password reset - password confirmation'} %>
          </div>

          <%= f.submit "Update password", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>