<!-- Dynamic General Tags -->
<meta name="keywords" content="<%= post.category %>" />
<meta name="description" content="<%= post.description %>" />

<!-- Feature Item Sharing -->
<!-- Facebook Open Graph Tags -->
<meta property="og:url" content="<%= post_url(post) %>" />
<meta property="og:type" content="article" />
<meta property="og:title" content="<%= post.title %>" />
<meta property="og:image" content="<%= image_url(post.image) %>" />
<meta property="og:image:height" content="<%= post.image_width %>" />
<meta property="og:image:width" content="<%= post.image_height %>" />
<meta property="og:description" content="<%= post.description %>" />
<meta property="og:site_name" content="Look At My Cat" />

<!-- Dynamic Twitter Card Meta Tags -->
<meta name="twitter:card" content="photo">
<meta name="twitter:site" content="Look At My Cat">
<meta name="twitter:url" content="<%= post_url(post) %>">
<meta name="twitter:title" content="<%= post.title %>">
<meta name="twitter:description" content="<%= post.description %>">
<meta name="twitter:image" content="<%= image_url(post.image) %>">