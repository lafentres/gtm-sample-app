<% provide(:title, 'All users') %>

<div class="row justify-content-center">
  <div class="col-md-8">

    <h1 class="text-center">All users</h1>

    <%= paginate @users %>
    <ul class="list-unstyled">
      <hr>
      <% @users.each do |user| %>
        <li class="media" style="">
          <%= image_tag(gravatar_url_for(user), alt: user.username, class: "mr-3")%>
          <div class="media-body">
            <h5 class="mt-0 mb-1"><%= link_to user.username, user %></h5>
            <% if current_user.admin? && !current_user?(user) %>
              <%= link_to "delete", destroy_user_path(user), method: :delete,
                          data: { confirm: "You sure?" } %>
            <% end %>    </div>
        </li>
        <hr>
      <% end %>
    </ul>
    <%= paginate @users %>

  </div>
</div>