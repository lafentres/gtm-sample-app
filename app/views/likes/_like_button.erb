<div class='js-like-<%= post.id %> text-left col'>
  <% if current_user && Like.where(user_id: current_user.id, post_id: post.id).size > 0 %>
    <%= link_to unlike_path(post), method: :delete, remote: true, title: 'Unlike' do %>
      <%= icon('fas', 'heart', class: 'fa-2x icon-selected') %>
    <% end %>
  <% elsif current_user %>
    <%= link_to like_path(post), method: :post, remote: true, title: 'Like' do %>
      <%= icon('far', 'heart', class: 'fa-2x icon-unselected') %>
    <% end %>
  <% end %>
</div>

